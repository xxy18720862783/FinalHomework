<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDetailActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/imageview_cover"
            android:layout_width="100dp"
            android:layout_height="200dp">
        </ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="200dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <TextView
                    android:text="@string/str_title"
                    android:layout_width="100dp"
                    android:layout_height="50dp">
                </TextView>
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <TextView
                    android:text="@string/str_author"
                    android:layout_width="100dp"
                    android:layout_height="50dp">
                </TextView>
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <TextView
                    android:text="@string/str_publisher"
                    android:layout_width="100dp"
                    android:layout_height="50dp">
                </TextView>
                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <TextView
                    android:text="@string/str_pubdate"
                    android:layout_width="100dp"
                    android:layout_height="50dp">
                </TextView>
                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                </TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/str_details">
        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="@string/str_label"
                android:layout_width="200dp"
                android:layout_height="50dp">
            </TextView>
            <TextView
                android:id="@+id/textview5"
                android:layout_width="200dp"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="@string/str_readingstate"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/textview6"
                android:layout_width="200dp"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/showdetail_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:text="@string/str_back">
    </Button>
</LinearLayout>